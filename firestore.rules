rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to opportunities for all users
    match /opportunities/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow read access to market_events for all users
    match /market_events/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow read access to signals for all users
    match /signals/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow read access to EOD data
    match /eod/{symbol}/bars/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow read access to news
    match /news/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Allow read access to incidents
    match /incidents/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}